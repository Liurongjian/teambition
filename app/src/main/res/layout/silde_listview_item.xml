<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsv"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/left_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/left_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/image_margin"
                android:src="@mipmap/selected"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content_ll"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@android:color/white"
            >
            <TextView
                android:id="@+id/from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qi Zhang"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 9"
                android:textSize="12sp"
                android:textColor="@color/gray_font"
                android:layout_alignBaseline="@+id/from_tv"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alg-android|不同的推送打开不的页面还有很多字的，什么！字还不够多吗？还不够多吗？"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/from_tv"
                android:layout_below="@+id/from_tv"
                />
            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_tv"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignLeft="@+id/subject_tv"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="比如 新订单的消息，打开最新任务 证件照审枋件照审枋，写个两行就好了，不要太多了"
                android:textColor="@color/gray_font"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin"
                android:src="@mipmap/menu"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</HorizontalScrollView>
